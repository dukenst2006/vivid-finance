.InputGroup
  box-shadow: $box_shadow_normal
  position: relative
  display: table
  border-collapse: separate
  width: 100%
  +has(addon)
    width: 1%
    white-space: nowrap
    display: table-cell
    padding: 1rem
    vertical-align: middle
    background-color: #333
    color: #fff
    text-align: center
    font-size: 1rem
    line-height: 1rem
    height: 3rem
  +has(control)
    box-shadow: none
    display: table-cell
    vertical-align: middle