// Imports
@require "./../../../assets/stylus/helpers/spa-imports.styl"

.icon
  display: inline-block
  font: normal normal normal 24px / 1 "Material Design Icons"
  font-size: inherit
  font-style: normal
  text-rendering: auto
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

for $icon in $mdi-icons
  .icon--{$icon}
    &:before
      content: '\' + $mdi-icons[$icon]
